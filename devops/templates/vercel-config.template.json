{
  "_comment": "Vercel DevOps Configuration Template",
  "platform": "vercel",
  "projectId": "YOUR_VERCEL_PROJECT_ID",
  "orgId": "YOUR_VERCEL_ORG_ID",
  "projectName": "your-app-name",

  "deployment": {
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "installCommand": "npm install",
    "devCommand": "npm run dev",
    "framework": "react",
    "nodeVersion": "18.x",
    "strategy": "instant"
  },

  "build": {
    "env": {
      "NODE_VERSION": "18"
    }
  },

  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x",
      "memory": 1024,
      "maxDuration": 10
    }
  },

  "regions": ["iad1"],

  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],

  "redirects": [
    {
      "source": "/old-path",
      "destination": "/new-path",
      "permanent": true
    }
  ],

  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.example.com/:path*"
    }
  ],

  "git": {
    "deploymentEnabled": {
      "main": true,
      "develop": true
    },
    "production": "main",
    "preview": ["develop", "staging"]
  },

  "monitoring": {
    "analytics": {
      "enabled": true
    },
    "webVitals": {
      "enabled": true
    },
    "logDrains": []
  },

  "cicd": {
    "ignoreCommand": "git diff --quiet HEAD^ HEAD ./"
  }
}
