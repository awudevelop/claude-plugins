{
  "name": "deployment",
  "version": "1.0.0",
  "description": "â€¢ v1.0.0: Initial release - Safe deployment automation with CICD integration, branch-based deployments (dev/uat/prod), safety checks and build validation",
  "author": "AutomateWith.Us",
  "repository": {
    "type": "git",
    "url": "https://github.com/awudevelop/claude-plugins.git"
  },
  "commands": {
    "/deploy:init": "commands/init.md",
    "/deploy": "commands/deploy.md"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/pre-deploy-check.js",
            "timeout": 150
          }
        ]
      }
    ]
  }
}
