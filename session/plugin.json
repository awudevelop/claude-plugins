{
  "name": "session",
  "version": "3.0.0",
  "description": "Optimized session management with 60-80% token reduction, plan mode support, and intelligent auto-capture. Never lose context again!",
  "author": {
    "name": "AutomateWith.Us",
    "email": "team@automatewith.us"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/automatewithus/claude-session-management"
  },
  "keywords": [
    "session",
    "snapshot",
    "auto-capture",
    "memory",
    "workflow",
    "productivity",
    "optimization",
    "plan-mode",
    "token-reduction",
    "performance"
  ],
  "category": "productivity",
  "license": "MIT",
  "commands": "./commands",
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/user-prompt-submit.js"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/post-tool-use.js Write"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/post-tool-use.js Edit"
          }
        ]
      }
    ]
  }
}
