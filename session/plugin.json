{
  "name": "session",
  "version": "3.3.1",
  "description": "Session management with Living Context system - continuous context tracking every 2 interactions, automatic snapshots, and 60-80% token reduction. Never lose context again!",
  "author": {
    "name": "AutomateWith.Us",
    "email": "team@automatewith.us"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/awudevelop/claude-plugins.git"
  },
  "keywords": [
    "session",
    "snapshot",
    "auto-capture",
    "memory",
    "workflow",
    "productivity",
    "optimization",
    "plan-mode",
    "token-reduction",
    "performance"
  ],
  "category": "productivity",
  "license": "MIT",
  "commands": "./commands",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/session-start.js"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/user-prompt-submit.js"
          },
          {
            "type": "command",
            "command": "osascript -e 'display notification \"Plugin Hook triggered!\" with title \"Claude Code Plugin\"'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/post-tool-use.js"
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/post-tool-use.js"
          }
        ]
      },
      {
        "matcher": "NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/post-tool-use.js"
          }
        ]
      }
    ]
  }
}
