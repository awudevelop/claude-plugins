{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://claude.ai/session-plugin/schemas/task-specs/create_interface.json",
  "title": "CreateInterfaceSpec",
  "description": "Lean specification for creating a TypeScript interface",
  "type": "object",
  "required": ["interface"],
  "properties": {
    "interface": {
      "type": "string",
      "description": "Interface name"
    },
    "exported": {
      "type": "boolean",
      "default": true
    },
    "extends": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Interfaces to extend"
    },
    "generics": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Generic type parameters"
    },
    "properties": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "type"],
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string" },
          "optional": { "type": "boolean", "default": false },
          "readonly": { "type": "boolean", "default": false },
          "description": { "type": "string" }
        }
      }
    },
    "methods": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": { "type": "string" },
          "params": {
            "type": "array",
            "items": { "type": "string" }
          },
          "returns": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    },
    "imports": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}
